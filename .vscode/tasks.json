{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build mympi",
            "command": "/usr/bin/g++-7",
            "args": [
                "-g",
                "mympi.cpp",
                "-o",
                "mympi"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "build myprogram",
            "command": "/usr/bin/g++-7",
            "args": [
                "-g",
                "myprogram.cpp",
                "-o",
                "myprogram",
                "-lrt"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}